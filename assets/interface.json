{
    "interface_version": 2,
    "name": "自动化",
    "agent": {
        "child_exec": "uv",
        "child_args": [
            "run",
            "../agent/main.py"
        ]
    },
    "controller": [
        {
            "name": "win",
            "description": "测试版本",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "微信",
                "screencap": "FramePool",
                "mouse": "SendMessage",
                "keyboard": "SendMessage"
            }
        }
    ],
    "resource": [
        //可以有多个不同的resource文件夹，对应不同的服务器
        {
            "name": "Official",
            "path": [
                "resource"
            ]
        }
    ],
    "task": [
        {
            "name": "文件传输",
            "entry": "点击"
        },
        {
            "name": "代理动作",
            "entry": "自定义行为",
            "option": [
                "选择项目"
            ]
        },
        {
            "name": "代理动作2",
            "entry": "StartWorkflow",
            "option": [
                "循环次数"
            ]
        }
    ],
    "option": {
        "选择项目": {
            "type": "select",
            "cases": [
                {
                    "name": "选项1",
                    "pipeline_override": {
                        "自定义行为": {
                            "custom_action_param": {
                                "str": "select_1"
                            }
                        }
                    }
                },
                {
                    "name": "选项2",
                    "pipeline_override": {
                        "自定义行为": {
                            "custom_action_param": {
                                "str": "select_2"
                            }
                        }
                    }
                }
            ]
        },
        "循环次数": {
            "type": "input",
            "inputs": [
                {
                    "name": "章节号",
                    "description": "章节号，用阿拉伯数字表示",
                    "default": "3",
                    "pipeline_type": "int"
                }
            ],
            "pipeline_override": {
                "StartWorkflow": {
                    "custom_action_param": {
                        "max_loops": "{章节号}",
                        "loop_count":0
                    }
                }
            }
        }
    }
}